{{>header}}
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex-justify-between">
            <div class="filter">
                <a href="/" class="border-shadow"><span class="text-gradient"><i class="fas fa-angle-double-left"></i> All User</span></a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">New User</h2>
            <span class="small">Use the form below to create a new user.</span>
        </div>
        <form action="/newUser" method="post" id="new_user">
            <div class="new_user">
                <div class="form-group">
                    <label for="name" class="labels">Name</label>
                    <input type="hidden" id="" value="">
                    <input type="text" name="name" value="" placeholder="Full Name">
                </div>
                <div class="form-group">
                    <label for="name" class="labels">Email</label>
                    <input type="email" name="email" value="" placeholder="example@gmail.com">
                </div>
                <div class="form-group">
                    <label for="gender" class="labels">Gender:</label>
                    <input type="radio" id="radio1" name="gender" value="Male">
                    <label for="radio1">Male</label>
                    <input type="radio" id="radio2" name="gender" value="Female">
                    <label for="radio2">Female</label>
                </div>
                <div class="form-group">
                    <label for="status"class="labels">Status:</label>
                    <input type="radio" id='radio3' name="status" value="Active">
                    <label for="radio3">Active</label>
                    <input type="radio" id='radio4' name="status" value="Inactive">
                    <label for="radio4">Inactive</label>
                </div>
                <div class="from-group">
                    <button type="submit" class="btn btn-lg text-dark update">Save</button>
                </div>
            </div>
        </form>
    </div>
</main>
{{>footer}}